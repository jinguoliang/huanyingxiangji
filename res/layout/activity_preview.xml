<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.huanyingxiangji1.activity.CameraSurfaceView
        android:id="@+id/cameraSurfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.example.huanyingxiangji1.view.MengView
        android:id="@+id/mengView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <!-- controller -->
    <Button
        android:id="@+id/pictureBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:onClick="pictureButtonClick"
        android:text="@string/picture" />

    <CheckBox
        android:id="@+id/mengCb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="50dp"
        android:onClick="onMengCbClick"
        android:text="@string/open_meng" />

    <Button
        android:id="@+id/mengPathBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:enabled="false"
        android:onClick="onSelectMengBtnClick"
        android:text="@string/select_meng" />

    <Button
        android:id="@+id/switchCameraBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:onClick="switchCameraButtonClick"
        android:text="@string/switch_camera" />

    <Button
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onBackClick"
        android:text="@string/back" />

    <SeekBar
        android:id="@+id/mengAlphaSb"
        style="@android:style/Widget.DeviceDefault.SeekBar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="-80dp"
        android:max="250"
        android:rotation="-90" />

</FrameLayout>